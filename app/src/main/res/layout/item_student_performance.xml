<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@color/bg_color"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/course_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Project Research" />
    
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/course_text"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="MT"
                    android:textAlignment="center"
                    android:textColor="@color/main_color" />

                <TextView
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="ET"
                    android:textAlignment="center"
                    android:textColor="@color/main_color" />

                <TextView
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="AVG"
                    android:textAlignment="center"
                    android:textColor="@color/main_color" />

                <TextView
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Final"
                    android:textAlignment="center"
                    android:textColor="@color/main_color" />

                <TextView
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="TTL"
                    android:textAlignment="center"
                    android:textColor="@color/main_color" />

                <TextView
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Result"
                    android:textAlignment="center"
                    android:textColor="@color/main_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <TextView
                    android:id="@+id/mt_text"
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textAlignment="center"
                    android:textColor="@color/main_color"
                    tools:text="25" />

                <TextView
                    android:id="@+id/et_text"
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textAlignment="center"
                    android:textColor="@color/main_color"
                    tools:text="25" />

                <TextView
                    android:id="@+id/avg_text"
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textAlignment="center"
                    android:textColor="@color/main_color"
                    tools:text="50" />

                <TextView
                    android:id="@+id/final_text"
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textAlignment="center"
                    android:textColor="@color/main_color"
                    tools:text="30" />

                <TextView
                    android:id="@+id/ttl_text"
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textAlignment="center"
                    android:textColor="@color/main_color"
                    tools:text="90" />

                <TextView
                    android:id="@+id/result_text"
                    style="@style/Inter.SemiBold"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/main_color"
                    tools:text="Excellent" />

            </LinearLayout>


            <TextView
                android:id="@+id/report_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="Reporting type: Test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

            <TextView
                android:id="@+id/teacher_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Teacher: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_type_text" />




        </androidx.constraintlayout.widget.ConstraintLayout>
        
        
        
    </com.google.android.material.card.MaterialCardView>
    

    
</androidx.constraintlayout.widget.ConstraintLayout>